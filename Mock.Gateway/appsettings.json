{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "user": {
        "ClusterId": "userCluster",
        "Match": { "Path": "/api/user/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api/user" },
          { "PathPrefix": "/api" }
        ]
      },
      "airline": {
        "ClusterId": "airlineCluster",
        "Match": { "Path": "/api/airline/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api/airline" },
          { "PathPrefix": "/api" }
        ]
      },
      "hospitality": {
        "ClusterId": "hospitalityCluster",
        "Match": { "Path": "/api/hospitality/{**catch-all}" }
      }
    },
    "Clusters": {
      "userCluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:7290" }
        }
      },
      "airlineCluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:7004" }
        }
      },
      "hospitalityCluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:7142" }
        }
      }
    }
  }
}
