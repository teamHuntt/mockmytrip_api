{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "users": {
        "ClusterId": "userCluster",
        "Match": { "Path": "/users/{**catch-all}" }
      },
      "airlines": {
        "ClusterId": "airlinesCluster",
        "Match": { "Path": "/airlines/{**catch-all}" }
      },
      "hospitality": {
        "ClusterId": "hospitalityCluster",
        "Match": { "Path": "/hospitality/{**catch-all}" }
      }
    },
    "Clusters": {
      "userCluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:5001/" }
        }
      },
      "airlinesCluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:5002/" }
        }
      },
      "hospitalityCluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:5003/" }
        }
      }
    }
  }
}

